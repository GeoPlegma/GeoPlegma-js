{
  "name": "geoplegma-js",
  "version": "0.0.4-beta",
  "description": "A JavaScript library for GeoPlegma.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/GeoPlegma/GeoPlegma-js#readme",
  "bugs": {
    "url": "https://github.com/GeoPlegma/GeoPlegma-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GeoPlegma/GeoPlegma-js.git"
  },
  "author": "Jo√£o Manuel <joaocsmanuel@gmail.com>",
  "files": [
    "dist",
    "native/*.node"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "node": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/nextjs/index.d.ts",
      "server": "./dist/client/nextjs/server.js",
      "default": "./dist/client/nextjs/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "build-native": "scripts/dev.sh",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && npm publish"
  },
  "devDependencies": {
    "@types/node": "^22.15.17",
    "bumpp": "^10.1.0",
    "tsdown": "^0.11.9",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "hono": "^4.11.7",
    "next": "^16.1.5"
  }
}